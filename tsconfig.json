{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "types": ["jest"],
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "noImplicitAny": false,
    "lib": ["es5", "dom", "ScriptHost", "es2015.promise", "es2015", "es2017"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
