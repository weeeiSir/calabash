{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "types": ["jest"],
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "types",
    "**/__test__",
    "test"
  ]
}
